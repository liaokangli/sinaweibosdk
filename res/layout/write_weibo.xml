<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
 android:background="#d5f8f5">
  
  
  
  <ImageView android:id="@+id/write_wb_item_head"
  android:layout_width="60dp"
  android:layout_height="60dp"
  android:src="@drawable/usericon"
  android:layout_marginTop="5dp"/>
  
  <!-- 右边框架 -->
 <LinearLayout
  android:layout_width="match_parent"
  android:orientation="vertical"
  android:layout_height="wrap_content"
  android:layout_margin="5dp">
  
	 <!-- 用户名称、新浪认证部分 --> 
	<LinearLayout
	  android:layout_width="match_parent"
	  android:layout_height="wrap_content"
	  android:orientation="vertical">	  
	  <!-- 用户名称 -->
	  <TextView android:id="@+id/txt_write_item_uname"
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:textColor="#424d54"
		  android:textSize="20dp"
		  android:text="wnewen"
	  />
	 	     <!-- 微博正文内容 -->
				 <EditText android:id="@+id/txt_write_item_content"
				  android:layout_width="fill_parent"
				  android:layout_height="wrap_content"
				  android:textColor="#6b717b"
				  android:textSize="12dp"
				  />
  <Button android:id="@+id/write_now"
      		android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:text="发表微博"
      	
      	/>
  <Button android:id="@+id/cancel"
      	  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:text="取消"
      
      ></Button>
  
 	  
	 </LinearLayout> 
  </LinearLayout>

  
  
</LinearLayout>